@model hellodoc.DbEntity.ViewModels.NotesModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="login" id="main" style="background-color: #e7e7e7;height:100vh;">

    <Partial name="_header" />

    <div class="row">

        <div class=" col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex justify-content-between mt-4 mb-2 mx-6">
            <h2 class="px-4">Notes</h2>
            <a asp-action="view_case" class="d-flex back-btn  text-end"
               style="color: #0dcaf0; font-size: larger;text-decoration:none">
                <span class="material-icons pt-2">
                    chevron_left
                </span>
                <span class="p-1">Back</span>
            </a>

        </div>
        <div class="col-12 col-sm-12 col-md-10 col-lg-8 mx-auto p-4 pt-4 p-sm-4 p-lg-0 row">
            <div class="col-md-6 col-lg-6">
             <div class="d-flex bg-light m-2 p-3 rounded-3">
                <i class="bi bi-arrow-left-right m-3 fs-3"></i>
                <div>
                    <h4>Transfer Notes</h4>
                        @{
                            if (@Model.TransferNotes != null)
                            {
                                <p>@Model.TransferNotes</p>
                            }
                            else
                            {
                                <p>...</p>
                            }
                        }
                </div>
             </div>
            </div>

            <div class="col-md-6 col-lg-6">
                <div class="d-flex bg-light m-2 p-3 rounded-3">
                    <i class="bi bi-person-fill m-3 fs-3"></i>
                    <div>
                        <h4>Physician Notes</h4>
                        <p>hiii </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6">
                <div class="d-flex bg-light m-2 p-3 rounded-3">
                    <i class="bi bi-person-rolodex m-3 fs-3"></i>
                    <div>
                        <h4>Admin Notes</h4>
                        @{
                                if (@Model.Adminnotes != null)
                                {
                                <p>@Model.Adminnotes</p>
                            }
                            else
                            {
                                <p>...</p>
                            }
                        }
                            
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="bg-light col-12 p-3 m-2 rounded-3">
                    
                    <form method="post" asp-action="save_note" asp-route-requestid=@Model.Requestid>
                    <textarea class="form-control" placeholder="admin notes" id="floatingTextarea2" rows="5" asp-for="Adminnotes"></textarea>


                    <div class="d-flex justify-content-end m-3">
                        <button type="submit" class="btn btn-info text-white ">Save Changes</button>
                    </div>
                    </form>
                </div>
            </div>

            

        </div>


    </div>

</div>
<footer style=" position:fixed;bottom:0; width:100%;">
    <div class="mt-2 mb-2 me-5">
        <a href="" class="text-white">Terms Of Conditions</a> |
        <a href="" class="text-white">Privacy Policy</a>
    </div>
</footer>

<script>
    
    

</script>

@section Scripts{
    @{
        <Partial name="_ValidationScriptsPartial" />
    }
    }