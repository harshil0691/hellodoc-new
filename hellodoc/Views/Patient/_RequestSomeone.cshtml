@model hellodoc.DbEntity.ViewModels.RequestFormModal


<div class="row bgcolor1">
    <div class="d-flex justify-content-between col-12 col-sm-12 col-md-10 col-lg-8 mx-auto mt-5">
        <h3>Submit Information</h3>
        <button class="btn btn-outline-info fs-5">
            <i class="bi bi-chevron-left"></i> Back
        </button>
    </div>

    <div class="d-grid gap-2 col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-column rounded-4 px-4 mt-5 bgcolor mb-5">

        <form method="post" asp-action="CreateRequest" asp-route-RequestType="request_someone" enctype="multipart/form-data">
            <h4 id="t1" class="mt-4">Patient Information</h4>

            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" asp-for="Symptoms"
                          style="height: 100px"></textarea>
                <label for="floatingTextarea2" class="mx-1">Enter Brief Details Of Symptoms (Optional)</label>
            </div>

            <div class="row">
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="floatingInput" asp-for="Firstname" placeholder="Firstname">
                    <label for="floatingInput" class="mx-3">First Name</label>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="floatingInput" asp-for="Lastname" placeholder="Lastname">
                    <label for="floatingInput" class="mx-3">Last Name</label>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="Date" class="form-control" id="floatingInput" asp-for="DateOfBirth">
                    <label for="floatingInput" class="mx-3">Date Of Birth</label>
                </div>
            </div>

            <h4 class="pt-2" id="t1">
                Patient Contact Information
            </h4>

            <div class="row">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" asp-for="PatientEmail" placeholder="Email">
                    <label for="floatingInput" class="mx-3">Email address</label>
                </div>
                <div class="form-floating col-md-6 col-lg-6">
                    <input type="tel" class="form-control pt-3 pb-3" id="phone" asp-for="Phonenumber" placeholder="Phone Number">
                    <label for="floatingInput" class="mx-3">Phone Number</label>
                </div>
            </div>


            <h4 class="pt-2" id="t1">
                Patient Location
            </h4>

            <div class="row">
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="floatingInput" asp-for="Street" placeholder="Street">
                    <label for="floatingInput" class="mx-3">Street</label>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="floatingInput" asp-for="City" placeholder="City">
                    <label for="floatingInput" class="mx-3">City</label>
                </div>
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="floatingInput" asp-for="State" placeholder="State">
                    <label for="floatingInput" class="mx-3">State</label>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="number" class="form-control" id="floatingInput" asp-for="Zipcode" placeholder="Zip Code">
                    <label for="floatingInput" class="mx-3">Zip Code</label>
                </div>
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="floatingInput" asp-for="Roomno" placeholder="Room no">
                    <label for="floatingInput" class="mx-3"> Room No. (Optional) </label>
                </div>
            </div>

            <h4 class="pt-2" id="t1">
                Relation
            </h4>

            <div class="row">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" asp-for="F_RelationType" placeholder="Realtion">
                    <label for="floatingInput" class="mx-3">Realtion</label>
                </div>
            </div>

            <h4 class="pt-2" id="t1">
                (Optional) Upload Photo or Document
            </h4>
            <div class="mb-3 mt-2">
                <input class="form-control" type="file" id="formFileMultiple" multiple asp-for="Doc">
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-info mx-3 p-2 px-3 mb-2">Submit</button>

                <button type="reset" class="btn btn-secondary mx-3 p-2 px-3 mb-2">Cancel</button>
            </div>

        </form>

    </div>

</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>