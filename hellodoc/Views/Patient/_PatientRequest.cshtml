@model hellodoc.DbEntity.ViewModels.RequestFormModal

<div class="row bgcolor1">
    <div class="d-grid gap-2 col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-column rounded-4 px-4 mt-5 bgcolor mb-5">

        <a asp-action="request" class="d-flex align-self-end btn btn-outline-info mt-4 text-info fs-5 text-decoration-none">
            <i class="bi bi-chevron-left"></i> Back
        </a>

        <form method="post" asp-action="CreateRequest" asp-route-RequestType="patient_request"  enctype="multipart/form-data">
            <h3 id="t1" class="pt-2">Patient Information</h3>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Enter Brief Details Of Symptoms (Optional)" style="height:100px" asp-for="Symptoms"></textarea>
                <label class="mx-1">Enter Brief Details Of Symptoms (Optional)</label>
                <span asp-validation-for="Symptoms" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname">
                    <label class="mx-3">First Name</label>
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Lastname" placeholder="Lastname">
                    <label class="mx-3">Last Name</label>
                    <span asp-validation-for="Lastname" class="text-danger"> </span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="Date" class="form-control" asp-for="DateOfBirth" placeholder="DateOfBirth">
                    <label class="mx-3">Date Of Birth</label>
                    <span asp-validation-for="DateOfBirth " class="text-danger"></span>
                </div>
            </div>

            <h3 class="pt-2" id="t1">
                Patient Contact Information
            </h3>

            <div class="row">
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="email" class="form-control" id="floatingInput12" asp-for="PatientEmail" onchange="emailExists()" placeholder="Email">
                    <label class="mx-3">Email address</label>
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6 col-lg-6">
                    <input type="tel" class="form-control pt-3 pb-3" id="phone" asp-for="Phonenumber" placeholder="Phone Number">
                    <label class="mx-3">Phone number</label>
                    <span asp-validation-for="Phonenumber" class="text-danger"></span>
                </div>

                <div class="form-floating col-md-6 col-lg-6" style="display:none" id="Password1">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="p1" onblur="samepass()">

                    <label class="mx-3">Password</label>
                    <span asp-validation-for="Password" class="text-danger" id="cnp2"></span>
                </div>
                <div class="form-floating col-md-6 col-lg-6" style="display:none" id="Password2">
                    <input asp-for="Conform_password" type="password" class="form-control" placeholder="Confirm Password" id="cp1" onblur="samepass()">
                    <label class="mx-3">Confirm Password</label>
                    <span asp-validation-for="Conform_password" class="text-danger" id="cnp1"></span>
                </div>

            </div>


            <h3 class="pt-2" id="t1">
                Patient Location
            </h3>

            <div class="row">
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Street" placeholder="Street">
                    <label class="mx-3">Street</label>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="City" placeholder="City">
                    <label for="floatingInput" class="mx-3">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <select class="form-select form-control" aria-label="Default select example" asp-for="State">
                        <option selected disabled>State</option>
                        @{
                            foreach (var item in Model.regions)
                            {
                                <option value="@item.Regionid">@item.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="number" class="form-control" asp-for="Zipcode" placeholder="Zipcode">
                    <label class="mx-3">Zip Code</label>
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Roomno" placeholder="Roomno">
                    <label class="mx-3">Room No. (Optional) </label>
                    <span asp-validation-for="Roomno" class="text-danger"></span>
                </div>
            </div>

            <h3 class="pt-2" id="t1">
                (Optional) Upload Photo or Document
            </h3>
            <div class="input-group mb-3">
                <input type="file" class="form-control" placeholder="Select File" asp-for="Doc">
                <label class="input-group-text bg-info text-white"><img src="/images/cloud-upload-icon.svg" class="p-1" alt="">Upload</label>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-info mx-3 p-2 px-3 mb-2">Submit</button>
                <button type="reset" class="btn btn-secondary mx-3 p-2 px-3 mb-2">Cancel</button>
            </div>
        </form>

    </div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>