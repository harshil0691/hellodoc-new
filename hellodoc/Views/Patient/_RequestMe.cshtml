@model hellodoc.DbEntity.ViewModels.RequestFormModal

<div class="row bgcolor1">

    <div class="d-flex justify-content-between col-12 col-sm-12 col-md-10 col-lg-8 mx-auto mt-5">
        <h3>Submit Information</h3>
        <button class="btn btn-outline-info fs-5">
            <i class="bi bi-chevron-left"></i> Back
        </button>
    </div>

    <div class="d-grid gap-2 col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-column rounded-4 px-4 mt-2 bgcolor mb-5">

        <form method="post" asp-action="CreateRequest" asp-route-RequestType="patient_request" enctype="multipart/form-data">
            <h4 id="t1" class="mt-4">Patient Information</h4>
            <div class="form-floating mt-3">
                <textarea class="form-control" placeholder="Enter Brief Details Of Symptoms (Optional)" style="height:100px" asp-for="Symptoms"></textarea>
                <label class="mx-1">Enter Brief Details Of Symptoms (Optional)</label>
                <span asp-validation-for="Symptoms" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-floating mt-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname">
                    <label class="mx-3">First Name</label>
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Lastname" placeholder="Lastname">
                    <label class="mx-3">Last Name</label>
                    <span asp-validation-for="Lastname" class="text-danger"> </span>
                </div>
                <div class="form-floating mt-3 col-md-6 col-lg-6">
                    <input type="Date" class="form-control" asp-for="DateOfBirth" placeholder="DateOfBirth">
                    <label class="mx-3">Date Of Birth</label>
                    <span asp-validation-for="DateOfBirth " class="text-danger"></span>
                </div>
            </div>

            <h4 class="pt-2" id="t1">
                Patient Contact Information
            </h4>

            <div class="row">
                <div class="form-floating mt-3 col-md-6 col-lg-6">
                    <input type="email" class="form-control" id="floatingInput12" asp-for="PatientEmail" onchange="emailExists()" placeholder="Email">
                    <label class="mx-3">Email address</label>
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                    <span id="p1" style="display:none" class="text-danger">Enter Your Login Email</span>
                </div>
                <div class="form-floating mt-3 col-md-6 col-lg-6">
                    <input type="tel" class="form-control pt-3 pb-3" id="phone" asp-for="Phonenumber" placeholder="Phone Number">
                    <label class="mx-3">Phone number</label>
                    <span asp-validation-for="Phonenumber" class="text-danger"></span>
                </div>
                
            </div>


            <h4 class="pt-2" id="t1">
                Patient Location
            </h4>

            <div class="row">
                <div class="form-floating mt-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Street" placeholder="Street">
                    <label class="mx-3">Street</label>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="City" placeholder="City">
                    <label for="floatingInput" class="mx-3">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="State" placeholder="State">
                    <label class="mx-3">State</label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3 col-md-6 col-lg-6">
                    <input type="number" class="form-control" asp-for="Zipcode" placeholder="Zipcode">
                    <label class="mx-3">Zip Code</label>
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Roomno" placeholder="Roomno">
                    <label class="mx-3">Room No. (Optional) </label>
                    <span asp-validation-for="Roomno" class="text-danger"></span>
                </div>
            </div>

            <h4 class="pt-2" id="t1">
                (Optional) Upload Photo or Document
            </h4>
            <div class="input-group mb-3">
                <input type="file" class="form-control" placeholder="Select File" asp-for="Doc">
                <label class="input-group-text bg-info text-white"><img src="/images/cloud-upload-icon.svg" class="p-1" alt="">Upload</label>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-info mx-3 p-2 px-3 mb-2">Submit</button>
                <button type="reset" class="btn btn-secondary mx-3 p-2 px-3 mb-2">Cancel</button>
            </div>
        </form>

    </div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>