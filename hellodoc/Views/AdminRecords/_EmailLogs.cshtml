@model hellodoc.DbEntity.ViewModels.AdminRecordsListModal
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="login" id="main" style="margin-bottom:100px">

    <div class="row bgcolor1">

        <div class=" col-11 mx-auto mt-4 mb-2">

            <div class="d-flex justify-content-between">
                <h3> Email Logs </h3>
            </div>

        </div>
        <div class="d-grid gap-2 col-11 mx-auto d-flex flex-column rounded-3 bgcolor px-4 mt-4" id="searchrecords">
            <form id="recordsForm">
                <div class="row mt-1">

                    <div class="col-12 col-md-3 m-1">
                        <select class="form-select h-100" aria-label="Search By Role" asp-for="SearchByRole">
                            <option selected value="0">Search By Role</option>
                            <option value="1">Admin</option>
                            <option value="2">Physician</option>
                            <option value="3">Patient</option>
                            <option value="4">Vendor</option>
                        </select>
                    </div>

                    <div class="form-floating m-1 col-12 col-md-3">
                        <input type="text" class="form-control" asp-for="ReceiverName" placeholder="Receiver Name">
                        <label class="mx-3">Receiver Name</label>
                    </div>

                    <div class="form-floating m-1  col-12 col-md-3">
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                        <label class="mx-3">Email</label>
                    </div>


                    <div class="form-floating m-1 col-12 col-md-3">
                        <input type="Date" class="form-control" asp-for="CreatedDate" placeholder="Created Date">
                        <label class="mx-3">Created Date</label>
                        <span asp-validation-for="CreatedDate " class="text-danger"></span>
                    </div>

                    <div class="form-floating m-1 col-12 col-md-3">
                        <input type="Date" class="form-control" asp-for="SentDate" placeholder="Sent Date">
                        <label class="mx-3">Sent Date</label>
                        <span asp-validation-for="SentDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="mt-3 d-flex justify-content-end">
                    <button type="reset" class="btn btn-outline-info mx-1">Clear</button>
                    <button type="button" class="btn btn-info text-white mx-1" onclick="searchrecords('EmailLogs','1')">Search</button>
                </div>

            </form>

            <div id="recordsTable"></div>
            
        </div>
    </div>
</div>


@section Scripts{
    @{
        <Partial name="_ValidationScriptsPartial" />
    }
 }
