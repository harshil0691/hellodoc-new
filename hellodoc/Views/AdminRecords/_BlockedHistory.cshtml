@model hellodoc.DbEntity.ViewModels.AdminRecordsListModal
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="login" id="main" style="margin-bottom:100px">

    <div class="row bgcolor1">

        <div class=" col-11 mx-auto mt-4 mb-2">

            <div class="d-flex justify-content-between">
                <h3> Blocked History </h3>
            </div>

        </div>
        <div class="d-grid gap-2 col-11 mx-auto d-flex flex-column rounded-3 bgcolor px-4 mt-4" id="searchrecords">
            <form id="recordsForm" onsubmit="searchrecords('BlockedHistory','1')">
                <div class="row mt-1">

                    <div class="form-floating m-1 col-12 col-md-3">
                        <input type="text" class="form-control" asp-for="PatientName" placeholder="Patient Name">
                        <label class="mx-3">Patient Name</label>
                    </div>

                    <div class="form-floating m-1 col-12 col-md-3">
                        <input type="date" class="form-control" asp-for="BlokedDate" placeholder="date">
                        <label class="mx-3">date</label>
                    </div>

                    <div class="form-floating m-1  col-12 col-md-3">
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                        <label class="mx-3">Email</label>
                    </div>


                    <div class="form-floating m-1 col-12 col-md-3">
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Phone number">
                        <label class="mx-3">Phone Number</label>
                    </div>

                </div>
                <div class="mt-3 d-flex justify-content-end">
                    <button type="reset" class="btn btn-outline-info mx-1">Clear</button>
                    <button type="submit" class="btn btn-info text-white mx-1">Search</button>
                </div>

            </form>

           <div id="recordsTable"></div>

        </div>


    </div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>