@model hellodoc.DbEntity.ViewModels.AdminRecordsListModal
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="login" id="main" style="margin-bottom:100px">

    <div class="row bgcolor1">

        <div class=" col-11 mx-auto mt-4 mb-2">

            <div class="d-flex justify-content-between">
                <h3> Search Records </h3>
                <button class="btn btn-info  text-white" onclick="exportToExcel('SearchRecords')"><i class="bi bi-share mx-2"></i>Export Data To Excel</button>
            </div>

        </div>
        <div class="d-grid gap-2 col-11 mx-auto d-flex flex-column rounded-3 bgcolor px-4 mt-4" id="searchrecords">
            <form id="recordsForm">
            <div class="row mt-1">

                <div class="col-12 col-md-3 m-1">
                    <select class="form-select h-100" aria-label="Default select example" asp-for="RequestStatus">
                        <option selected value="0">Select Request Status</option>
                        <option value="1">Unassigned</option>
                        <option value="2">Accepted</option>
                        <option value="3">MDEnRoute</option>
                        <option value="4">MDOnSite</option>
                        <option value="5">Conclude</option>
                        <option value="6">Cancelled</option>
                        <option value="7">CancelledByPatient</option>
                        <option value="8">Closed</option>
                        <option value="9">Unpaid</option>
                        <option value="10">Clear</option>
                    </select>
                </div>
                
                <div class="form-floating m-1 col-12 col-md-3">
                    <input type="text" class="form-control" asp-for="PatientName" placeholder="PatientName">
                    <label class="mx-3">Patient Name</label>
                </div>
                
                <div class="col-12 col-md-3 m-1">
                    <select class="form-select h-100" aria-label="Default select example" asp-for="RequestType">
                        <option selected value="0">Select RequestType</option>
                        <option value="1">Business</option>
                        <option value="2">Patient</option>
                        <option value="3">Family/Friend</option>
                        <option value="4">Concierge</option>
                    </select>
                </div>

                <div class="form-floating m-1 col-12 col-md-3">
                    <input type="Date" class="form-control" asp-for="FromDateOfService" placeholder="From DateOfService">
                    <label class="mx-3">From DateOfService</label>
                    <span asp-validation-for="FromDateOfService " class="text-danger"></span>
                </div>
                
                <div class="form-floating m-1 col-12 col-md-3">
                    <input type="Date" class="form-control" asp-for="ToDateOfService" placeholder="To DateOfService">
                    <label class="mx-3">To DateOfService</label>
                    <span asp-validation-for="ToDateOfService " class="text-danger"></span>
                </div>

                <div class="form-floating m-1 col-12 col-md-3">
                    <input type="text" class="form-control" asp-for="ProviderName" placeholder="Provider Name">
                    <label class="mx-3">Provider Name</label>
                </div>

                <div class="form-floating m-1  col-12 col-md-3">
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                    <label class="mx-3">Email</label>
                </div>
                
                <div class="form-floating m-1  col-12 col-md-3">
                    <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="Phone Number">
                    <label class="mx-3">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

            </div>
            <div class="mt-3 d-flex justify-content-end">
                <button type="reset" class="btn btn-outline-info mx-1">Clear</button>
                <button type="button" class="btn btn-info text-white mx-1" onclick="searchrecords('SearchRecords','1')">Search</button>
            </div>

            </form>

            <div id="recordsTable"></div>

        </div>


    </div>
</div>


@section Scripts{
    @{
        <Partial name="_ValidationScriptsPartial" />
    }
 }
