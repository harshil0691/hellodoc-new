@model hellodoc.DbEntity.ViewModels.RequestFormModal
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="login" id="main" style="margin-bottom:100px">

    <div class="row bgcolor1">

        <div class=" col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex justify-content-between mt-4 mb-2">
            <h2> Submit Information</h2>
            <button onclick="loadPartialDashView('dashboard')" class="d-flex btn btn-outline-info bg-transparent  text-end text-info fs-5 text-decoration-none">
                <span class="material-icons pt-2">
                    chevron_left
                </span>
                <span class="p-1">Back</span>
            </button>

        </div>
        <div class="d-grid gap-2 col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-column rounded-3 bgcolor px-4 mt-4 shadow">

            <form method="post" asp-action="create_request">
            <h4 class="mt-3">Patient</h4>

            <div class="row mt-3">
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname">
                    <label class="mx-3">First Name</label>
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Lastname" placeholder="Lastname">
                    <label class="mx-3">Last Name</label>
                    <span asp-validation-for="Lastname" class="text-danger"> </span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="Date" class="form-control" asp-for="DateOfBirth" placeholder="DateOfBirth">
                    <label class="mx-3">Date Of Birth</label>
                    <span asp-validation-for="DateOfBirth " class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="email" class="form-control" id="floatingInput12" asp-for="PatientEmail" placeholder="Email">
                    <label class="mx-3">Email address</label>
                     <span asp-validation-for="PatientEmail" class="text-danger"></span>
                </div>
                <div class="form-floating col-md-6 col-lg-6">
                    <input type="tel" class="form-control pt-3 pb-3" id="phone" asp-for="Phonenumber" placeholder="Phone Number">
                    <label class="mx-3">Phone number</label>
                    <span asp-validation-for="Phonenumber" class="text-danger"></span>
                </div>
            </div>

            <h4 class="mt-3"> Location </h4>

                <div class="row mt-3">
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="street" asp-for="Street" placeholder="Street"  >
                    <label for="floatingInput" class="mx-3">Street</label>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="text" class="form-control" id="city" asp-for="City" placeholder="City"  >
                    <label for="floatingInput" class="mx-3">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                    <div class="form-floating mb-3  col-md-6 col-lg-6">
                        <select class="form-select form-control" aria-label="Default select example" asp-for="State">
                            <option selected disabled>State</option>
                            @{
                                foreach (var item in Model.regions)
                                {
                                    <option value="@item.Regionid">@item.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                <div class="form-floating mb-3 col-md-6 col-lg-6">
                    <input type="number" class="form-control" id="zip" asp-for="Zipcode" placeholder="ZipCode"  >
                    <label for="floatingInput" class="mx-3">Zip Code</label>
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3  col-md-6 col-lg-6">
                    <input type="text" class="form-control" asp-for="Roomno" placeholder="Roomno">
                    <label class="mx-3">Room No. (Optional) </label>
                    <span asp-validation-for="Roomno" class="text-danger"></span>
                </div>
                @* <div class="form-floating mb-3  col-md-6 col-lg-6">
                        @{
                            string address = Model.Street + "," + Model.City + "," + Model.State;
                        }

                        <a class="btn btn-white text-info border-1 border-info rounded bg-transparent px-3 py-2" id="openBtn" target="_blank" href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(address)"><i class="bi bi-geo-alt"></i>Map</a>
                </div> *@
                </div>

            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="" style="height:100px" asp-for="AdminNotes"></textarea>
                <label class="mx-1">Admin Notes</label>
                <span asp-validation-for="AdminNotes" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end" id="edit2">
                <button type="submit" class="btn btn-info text-white mx-3 p-2 px-3 mb-2">Save</button>
                <button type="button" class="btn btn-outline-info mx-3 p-2 px-3 mb-2">Cancel</button>
            </div>
            </form>
        </div>


    </div>

</div>
<footer style=" position:fixed;bottom:0; width:100%;">
    <div style="padding-right: 40px;">
        <a href="" style="color: white;">Terms Of Conditions</a> |
        <a href="" style="color: white;">Privacy Policy</a>
    </div>
</footer>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

