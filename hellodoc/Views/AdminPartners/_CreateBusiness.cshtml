@model hellodoc.DbEntity.ViewModels.AdminPartnersModal
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="login" id="main" style="margin-bottom:100px">

    <div class="row bgcolor1">

        <div class=" col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex justify-content-between mt-4 mb-2">
            <h3> Add Business </h3>
            <button class="btn btn-outline-info bg-transpernt" onclick="partners({ actionType: 'partnerstable',back : true})">
                <i class="bi bi-chevron-left"></i>Back
            </button>
        </div>

        <div class="d-grid gap-2 col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex content px-4 pt-4">

            <form method="post" id="business">
                <h4 id="t1" class="pt-2 pb-4">Submit Information</h4>

                <div class="row mt-1">

                    <div class="form-floating mt-2 col-12 col-md-6">
                        <input type="text" class="form-control" asp-for="Vendorname" placeholder="Vendor Name">
                        <label class="mx-3">Vendor Name</label>
                    </div>

                    <div class="form-floating mt-2 col-12 col-md-6">
                        <select class="form-select h-100" aria-label="Proffesion" asp-for="Profession">
                            <option selected value="0">Professions</option>
                            @{
                                foreach (var profession in Model.healthProfessionalTypes)
                                {
                                    <option value="@profession.Healthprofessionalid">@profession.Professionname</option>
                                }
                            }
                        </select>
                    </div>
                    

                    <div class="form-floating mt-2 col-md-6 col-lg-6">
                        <input type="number" class="form-control pt-3 pb-3" asp-for="Faxnumber" placeholder="fax number">
                        <label class="mx-3">fax number</label>
                        <span asp-validation-for="Faxnumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating mt-2 col-md-6 col-lg-6">
                        <input type="tel" class="form-control pt-3 pb-3" id="phone" asp-for="Phonenumber" placeholder="Phone Number">
                        <label class="mx-3">Phone number</label>
                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating  mt-2 col-12 col-md-6">
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                        <label class="mx-3">Email</label>
                    </div>

                    <div class="form-floating mt-2 col-12 col-md-6">
                        <input type="text" class="form-control" asp-for="Businesscontact" placeholder="Business contact">
                        <label class="mx-3">Business contact</label>
                    </div>

                    <div class="form-floating mt-2 col-12 col-md-6">
                        <input type="text" class="form-control" asp-for="Street" placeholder="Street">
                        <label class="mx-3">Street</label>
                    </div>
                    <div class="form-floating mt-2 col-12 col-md-6">
                        <input type="text" class="form-control" asp-for="State" placeholder="State">
                        <label class="mx-3">State</label>
                    </div>
                    <div class="form-floating mt-2 col-12 col-md-6">
                        <input type="text" class="form-control" asp-for="City" placeholder="City">
                        <label class="mx-3">City</label>
                    </div>
                    <div class="form-floating mt-2 col-12 col-md-6">
                        <input type="number" class="form-control" asp-for="Zip" placeholder="Zip">
                        <label class="mx-3">Zip</label>
                    </div>
                </div>


                <div class="d-flex justify-content-end mt-3">
                    <button type="button" class="btn btn-info text-white mx-3 p-2 px-3 mb-2" onclick="bussinessActions('new_business')" >Save</button>
                    <button type="reset" class="btn btn-outline-info mx-3 p-2 px-3 mb-2" >Cancel</button>
                </div>
            </form>


        </div>


    </div>

</div>
<footer style=" position:fixed;bottom:0; width:100%;">
    <div style="padding-right: 40px;">
        <a href="" style="color: white;">Terms Of Conditions</a> |
        <a href="" style="color: white;">Privacy Policy</a>
    </div>
</footer>

